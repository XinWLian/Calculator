<UserControl x:Class="Calculator.View.SelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="100">
    <Grid>
        <StackPanel Orientation="Vertical">
            <RadioButton Style="{DynamicResource SelectorButton}" 
                    Content="Calculator" Command="{Binding SelectCalculatorCommand}" Width="100" Height="100" />
            <RadioButton Style="{DynamicResource SelectorButton}" 
                    Content="History" Command="{Binding SelectHistoryCommand}" Width="100" Height="100"/>
        </StackPanel>
    </Grid>
</UserControl>
