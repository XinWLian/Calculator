<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator" 
        xmlns:views="clr-namespace:Calculator.View"
        xmlns:vms="clr-namespace:Calculator.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="375">
    <Grid Background="Black" >
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:CalculatorViewModel}">
                <views:CalculatorView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:HistoryViewModel}">
                <views:HistoryView/>
            </DataTemplate>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <views:SelectorView DataContext="{Binding SelectorViewModel}"  Grid.Column="0"/>
        <ContentControl Content="{Binding CurrentViewModel}" Grid.Column="1" VerticalAlignment="Top"/>
    </Grid>
</Window>
